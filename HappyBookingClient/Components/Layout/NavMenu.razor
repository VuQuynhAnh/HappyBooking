@using HappyBookingClient.Service.IService
@inject ILanguageService _languageService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">@_languageService["Welcome"]</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <MudIcon Icon="@Icons.Material.Filled.Home" Class="mr-2"></MudIcon> @_languageService["Home"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="chat">
                <MudIcon Icon="@Icons.Material.Filled.Chat" Class="mr-2"></MudIcon> @_languageService["Chat"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="user-list">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> User List
            </NavLink>
        </div>
    </nav>
</div>


@code {

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await _languageService.LoadLanguage();
            StateHasChanged();
        }
    }
}
